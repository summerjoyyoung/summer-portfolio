---
import { type CollectionEntry, getCollection } from 'astro:content';

import BaseLayout from '../../layouts/BaseLayout.astro';

import ContactCTA from '../../components/ContactCTA.astro';
import Hero from '../../components/Hero.astro';
import Icon from '../../components/Icon.astro';
import Pill from '../../components/Pill.astro';
import TableOfContents, { type Heading } from '../../components/TableOfContents.astro';

interface Props {
	entry: CollectionEntry<'work'>;
}

// This is a dynamic route that generates a page for every Markdown file in src/content/
// Read more about dynamic routes and this `getStaticPaths` function in the Astro docs:
// https://docs.astro.build/en/core-concepts/routing/#dynamic-routes
export async function getStaticPaths() {
	const work = await getCollection('work');
	return work.map((entry) => ({
		params: { slug: entry.slug },
		props: { entry },
	}));
}

const { entry } = Astro.props;
const { Content, headings: rawHeadings } = await entry.render();

// Extract H2 and H3 headings for table of contents
function createSlug(text: string): string {
	return text.toLowerCase().replace(/[^a-z0-9]+/g, '-').replace(/(^-|-$)/g, '');
}

const headings: Heading[] = rawHeadings
	.filter((heading: any) => heading.depth === 2 || heading.depth === 3)
	.map((heading: any) => ({
		id: createSlug(heading.text),
		text: heading.text,
		level: heading.depth,
	}));
---

<BaseLayout title={entry.data.title} description={entry.data.description}>
	<main class="page-layout">
		<div class="page-header wrapper">
			<a class="back-link" href="/work/"><Icon icon="arrow-left" /> Work</a>
			<Hero title={entry.data.title} align="start">
				<div class="details">
					<div class="tags">
						{entry.data.tags.map((t) => <Pill>{t}</Pill>)}
					</div>
					<p class="description">{entry.data.description}</p>
				</div>
			</Hero>
		</div>
		<div class="page-content">
			{headings.length > 0 && (
				<aside class="sidebar">
					<TableOfContents headings={headings} />
				</aside>
			)}
			<article class="main-content">
				{entry.data.img && <img src={entry.data.img} alt={entry.data.img_alt || ''} class="hero-image" />}
				<Content />
			</article>
		</div>
	</main>
	<ContactCTA />
</BaseLayout>

<style>
	.page-header {
		padding-bottom: 2.5rem;
		border-bottom: 1px solid var(--gray-800);
		margin-bottom: 3.75rem;
		padding-inline: 0rem;
	}

	.back-link {
		display: none;
		margin-bottom: 0.5rem;
	}

	.details {
		display: flex;
		flex-direction: column;
		padding: 0.5rem;
		gap: 1.5rem;
		justify-content: space-between;
		align-items: center;
	}

	.tags {
		display: flex;
		gap: 0.5rem;
	}

	.description {
		font-size: var(--text-lg);
		max-width: 54ch;
	}
	
	/* Simple two-column layout */
	.page-layout {
		display: flex;
		flex-direction: column;
		gap: 2rem;
		margin: 0 auto;
		padding: 0 5rem;
		margin-bottom: 5rem;
		align-items: flex-start;
		min-height: calc(100vh - 101px);
	}

	.page-content {
		display: flex;
		flex-direction: row;
		gap: 2rem;
	}

	.sidebar {
		flex-shrink: 0;
		width: 250px;
	}

	.main-content {
		flex: 1;
		min-width: 0;
	}

	.hero-image {
		width: 100%;
		margin-bottom: 2.5rem;
		border-radius: 1.5rem;
		box-shadow: var(--shadow-sm);
		background: var(--gradient-subtle);
		border: 1px solid var(--gray-800);
	}
	/* Content styling */
	.main-content > :global(* + *) {
		margin-top: 1rem;
	}

	.main-content :global(h1),
	.main-content :global(h2),
	.main-content :global(h3),
	.main-content :global(h4),
	.main-content :global(h5) {
		margin: 1.5rem 0;
		scroll-margin-top: 2rem;
	}

	.main-content :global(img) {
		border-radius: 1.5rem;
		box-shadow: var(--shadow-sm);
		background: var(--gradient-subtle);
		border: 1px solid var(--gray-800);
	}

	.main-content :global(blockquote) {
		font-size: var(--text-lg);
		font-family: var(--font-brand);
		font-weight: 600;
		line-height: 1.1;
		padding-inline-start: 1.5rem;
		border-inline-start: 0.25rem solid var(--accent-dark);
		color: var(--gray-0);
	}

	.back-link,
	.main-content :global(a) {
		text-decoration: 1px solid underline transparent;
		text-underline-offset: 0.25em;
		transition: text-decoration-color var(--theme-transition);
	}

	.back-link:hover,
	.back-link:focus,
	.main-content :global(a:hover),
	.main-content :global(a:focus) {
		text-decoration-color: currentColor;
	}

	/* Mobile: stack vertically */
	@media (max-width: 768px) {
		.page-layout {
			flex-direction: column;
			gap: 1rem;
		}

		.sidebar {
			width: 100%;
		}
	}

	@media (min-width: 50em) {
		.back-link {
			display: block;
		}

		.details {
			flex-direction: row;
			gap: 2.5rem;
		}

		.content :global(blockquote) {
			font-size: var(--text-2xl);
		}
	}
</style>
