---
export interface Heading {
  id: string;
  text: string;
  level: number;
}

export interface Props {
  headings: Heading[];
}

const { headings } = Astro.props;
---

<aside class="table-of-contents">
  <h2 class="toc-title">Contents</h2>
  <nav>
    <ol class="toc-list">
      {headings.map((heading) => (
        <li class={`toc-item toc-item--h${heading.level}`}>
          <a href={`#${heading.id}`} class="toc-link" data-heading-id={heading.id}>
            {heading.text}
          </a>
        </li>
      ))}
    </ol>
  </nav>
</aside>

<style>
  .table-of-contents {
    width: 250px;
    padding: 1.5rem;
    background: var(--gray-999);
    border: 1px solid var(--gray-800);
    border-radius: 0.75rem;
  }

  .toc-title {
    font-size: var(--text-lg);
    font-weight: 600;
    color: var(--gray-0);
    margin: 0 0 1rem 0;
    padding-bottom: 0.75rem;
    border-bottom: 1px solid var(--gray-800);
  }

  .toc-list {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .toc-item {
    margin-bottom: 0.5rem;
  }

  .toc-item--h3 {
    margin-left: 1rem;
    margin-bottom: 0.25rem;
  }

  .toc-link {
    display: block;
    padding: 0.375rem 0.75rem;
    color: var(--gray-300);
    text-decoration: none;
    font-size: var(--text-sm);
    border-radius: 0.375rem;
    transition: all var(--theme-transition);
  }

  .toc-item--h2 > .toc-link {
    font-weight: 500;
    font-size: var(--text-base);
  }

  .toc-link:hover {
    color: var(--accent-regular);
    background: var(--gray-900);
  }

  .toc-link.active {
    color: var(--accent-regular);
    background: var(--accent-subtle-overlay);
    font-weight: 600;
  }
</style>

<script>
  function initTableOfContents() {
    const tocLinks = document.querySelectorAll('.toc-link');
    
    // Smooth scrolling for TOC links
    tocLinks.forEach(link => {
      link.addEventListener('click', (e) => {
        e.preventDefault();
        const targetId = link.getAttribute('href')?.substring(1);
        const targetElement = document.getElementById(targetId || '');
        
        if (targetElement) {
          targetElement.scrollIntoView({
            behavior: 'smooth',
            block: 'start'
          });
        }
      });
    });

    // Active section highlighting
    const headings = document.querySelectorAll('h2[id], h3[id]');
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach(entry => {
          const id = entry.target.id;
          const tocLink = document.querySelector(`[data-heading-id="${id}"]`);
          
          if (entry.isIntersecting && tocLink) {
            // Remove active from all links
            tocLinks.forEach(link => link.classList.remove('active'));
            // Add active to current link
            tocLink.classList.add('active');
          }
        });
      },
      { rootMargin: '-20% 0px -70% 0px' }
    );

    headings.forEach(heading => observer.observe(heading));
  }

  // Initialize on page load
  document.addEventListener('DOMContentLoaded', initTableOfContents);
  // Re-initialize for Astro page transitions
  document.addEventListener('astro:page-load', initTableOfContents);
</script>
